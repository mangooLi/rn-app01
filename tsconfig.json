{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "baseUrl": ".",
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "src/typings.ts",
    "node_modules/types-buffer/index.d.ts",
    "App.tsx"
  ],
  "exclude": [
    // "node_modules",
    "**/*.spec.ts"
  ]
}
